---
import { Icon } from "astro-icon/components";
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<article
  class="flex flex-col items-center gap-3 bg-white rounded-lg w-60 p-10 shadow-[rgba(0,_0,_0,_0.24)_0px_3px_8px]"
>
  <Icon name={icon} class="size-12" />
  <h2 class="text-blue-hard text-xl font-bold text-center md:text-3xl">
    {title}
  </h2>
  <p class="text-gray-soft text-sm text-center font-medium text-balance">
    {description}
  </p>
</article>
