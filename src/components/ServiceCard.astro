---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<article
  class="flex flex-col gap-3 bg-white rounded-lg w-80 h-60 p-8 last:bg-secondary last:text-white shadow-[rgba(0,_0,_0,_0.24)_0px_3px_8px]"
>
  <Icon name={icon} class="size-12" />
  <h2 class="text-xl cl font-bold">{title}</h2>
  <p class="text-xs font-medium">{description}</p>
</article>
