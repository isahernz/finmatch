---
import ServiceCard from "./ServiceCard.astro";

const services = [
  {
    title: "Planificación Fiscal Corporativa",
    description:
      "Estrategias para optimizar impuestos cumpliendo con las normativas legales.",
    icon: "report-money",
  },
  {
    title: "Gestión Contable y Financiera",
    description:
      "Elaboración de estados financieros, libros contables y análisis de resultados.",
    icon: "chart-bar",
  },
  {
    title: "Asesoría en Cumplimiento Normativo",
    description:
      "Apoyo en auditorías, trámites legales y regulaciones fiscales.",
    icon: "check-circle",
  },
];
---

<section class="relative py-20">
  <div
    class="flex flex-col items-center gap-8 md:flex-row md:justify-evenly md:flex-wrap md:absolute md:top-20"
  >
    {services.map((service) => <ServiceCard {...service} />)}
  </div>
</section>
